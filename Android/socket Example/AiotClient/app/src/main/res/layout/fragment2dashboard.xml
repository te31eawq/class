<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="horizontal"
    tools:context="net.kccistc.AiotClient.Fragment1Home">

    <FrameLayout
        android:id="@+id/FrameLayoutLeft"
        android:layout_width="212dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFEB3B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCondition"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#FDE5E5"
                    android:gravity="center"
                    android:text="Condition"
                    android:textSize="20sp"
                    app:backgroundTint="#36C2FF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:hapticFeedbackEnabled="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewillu"
                    android:layout_width="113dp"
                    android:layout_height="122dp"
                    android:layout_gravity="center"
                    android:src="@drawable/illumination" />

                <TextView
                    android:id="@+id/textViewillu"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="00.00%"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewtemp"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/temp" />

                <TextView
                    android:id="@+id/textViewtemp"
                    android:layout_width="89dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="00.00 C"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewHumi"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/humi" />

                <TextView
                    android:id="@+id/textViewhumi"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00.00%"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayoutRight"
        android:layout_width="208dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="134dp"
                    android:layout_weight="1"
                    android:text="Button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewLamp"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/led_off" />

                <Switch
                    android:id="@+id/switchLamp"
                    android:layout_width="113dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:switchMinWidth="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPlug"
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/blinds_off" />

                <Switch
                    android:id="@+id/switchPlug"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:switchMinWidth="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewAir"
                    android:layout_width="wrap_content"
                    android:layout_height="171dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/air_off" />

                <Switch
                    android:id="@+id/switchAir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:switchMinWidth="100dp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>